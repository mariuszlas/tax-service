{
    "name": "tax-service",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "build": "tsc -b",
        "dev": "APP_ENV=test nodemon index.ts",
        "start": "npm run build && node dist/index.js",
        "start:test": "APP_ENV=test npm start",
        "start:prod": "APP_ENV=prod npm start",
        "test": "jest",
        "ts:check": "tsc --noEmit",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix .",
        "prepare": "husky || true",
        "generate-migration": "npx drizzle-kit generate",
        "migrate": "APP_ENV=test npx drizzle-kit migrate",
        "drizzle-studio": "APP_ENV=test npx drizzle-kit studio"
    },
    "author": "Mariusz Las",
    "license": "MIT",
    "description": "",
    "dependencies": {
        "@types/yamljs": "^0.2.34",
        "body-parser": "^1.20.3",
        "decimal.js": "^10.4.3",
        "dotenv": "^16.4.5",
        "drizzle-kit": "^0.24.2",
        "drizzle-orm": "^0.33.0",
        "express": "^4.21.0",
        "express-openapi-validator": "^5.3.7",
        "pg": "^8.13.0",
        "pino-http": "^10.3.0",
        "pino-http-print": "^3.1.0",
        "swagger-ui-express": "^5.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.13",
        "@types/node": "^22.7.4",
        "@types/pg": "^8.11.10",
        "@types/swagger-ui-express": "^4.1.6",
        "@typescript-eslint/eslint-plugin": "^8.7.0",
        "eslint": "^9.11.1",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.7",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.5"
    },
    "lint-staged": {
        "*.{js,ts,md}": [
            "prettier --write ."
        ],
        "*.{js,ts}": [
            "eslint --fix ."
        ]
    },
    "engines": {
        "node": ">=20"
    }
}
